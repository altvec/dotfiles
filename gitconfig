[user]
	name = altvec
	email = sergey@bluehat.me
[color]
	ui = auto
	interactive = auto
[color "branch"]
	current = red
	local   = yellow
	remote  = green
[color "diff"]
	meta = cyan
	frag = magenta
	old  = red bold
	new  = green bold
[color "status"]
	added     = yellow
	changed   = green
	untracked = cyan
[core]
	excludesfile = ~/.gitignore
	editor = vim
	autocrlf = input
	precomposeunicode = true
[push]
	default = current
[diff]
	algorithm = patience
[credential]
    helper = osxkeychain
[alias]
	slog = log --pretty=oneline -n 20 --graph --abbrev-commit --decorate
	st = status -sb
    stat = status
	ci = commit
    cm = commit -m
    po = push origin
	co = checkout
	br = branch
	today = diff @(yesterday}.. --stat
	unci = reset HEAD^
	uncommit = reset HEAD^
[filter "lfs"]
	smudge = git lfs smudge %f
	required = true
	clean = git lfs clean %f
