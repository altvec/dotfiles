    name = altvec
    email = sergey@bluehat.me
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
    interactive = auto
[core]
    excludesfile = ~/.gitignore
    editor = vim
    autocrlf = input
[push]
    default = current
[credential]
    helper = osxkeychain
[alias]
    sl = log --pretty=oneline -n 20 --graph --abbrev-commit --decorate
    st = status -sb
    ci = commit
    co = checkout
    br = branch
    today = diff @(yesterday}.. --stat
    unci = reset HEAD^
    uncommit = reset HEAD^
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
