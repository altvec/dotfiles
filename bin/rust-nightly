#!/bin/bash
set -e

RUST_URL=https://static.rust-lang.org/dist/rust-nightly-x86_64-apple-darwin.tar.gz
CARGO_URL=https://static.rust-lang.org/cargo-dist/cargo-nightly-x86_64-apple-darwin.tar.gz

DIR=`brew --cellar`/rust/HEAD

rm -rf ${DIR}.new
mkdir -p ${DIR}.new
curl ${RUST_URL} |tar -C ${DIR}.new --strip-components 1 -zxf -
curl ${CARGO_URL} |tar -C ${DIR}.new --strip-components 1 -zxf -

brew unlink rust || true
rm -rf ${DIR}.old
mv ${DIR} ${DIR}.old
mv ${DIR}.new ${DIR}
brew link rust
